{
  "name": "music-app-github-catalyst",
  "version": "1.0.0",
  "description": "A simple music app using the `@github/catalyst` dependency.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --keep-names",
    "dev": "run-p dev:*",
    "dev:node": "node --watch dist/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput"
  },
  "keywords": [
    "music app",
    "github catalyst",
    "@github/catalyst",
    "typescript",
    "esbuild",
    "web components"
  ],
  "author": "Derian CÃ³rdoba",
  "license": "MIT",
  "dependencies": {
    "@github/catalyst": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.2.0",
    "esbuild": "0.23.0",
    "esbuild-plugin-tsc": "^0.4.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  }
}
